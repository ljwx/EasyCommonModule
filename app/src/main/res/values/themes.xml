<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewBaseModule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. 主要品牌颜色，一般用于ActionBar背景。-->
        <item name="colorPrimary">@color/base_app_colorPrimary</item>
        <!--主要品牌颜色的可选颜色-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!--在Primary等这些背景的上面内容的颜色，例如ActioBar上面的文字颜色-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. 第二品牌颜色-->
        <item name="colorSecondary">@color/teal_200</item>
        <!--第二品牌颜色的可选颜色-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabBackground">@android:color/transparent</item>

        <!--页面的背景颜色-->
<!--        <item name="android:colorBackground">#f7f7f7</item>-->
        <!--CheckBox,RadioButton,Switch选中颜色-->
        <item name="colorAccent">#ff0000</item>
        <!--CheckBox,RadioButton,Switch未选中颜色,暂无效-->
        <item name="colorControlNormal">#ffffff</item>
    </style>
</resources>